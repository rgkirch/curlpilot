{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/mock_copilot_output.schema.json",
  "title": "Mock Copilot Response Output",
  "description": "Defines the structure of the JSON response generated by the script.",
  "type": "object",
  "required": [
    "choices",
    "id",
    "usage",
    "model",
    "prompt_filter_results",
    "system_fingerprint"
  ],
  "properties": {
    "choices": {
      "description": "A list of completion choices. The mock script always generates one choice.",
      "type": "array",
      "minItems": 1,
      "maxItems": 1,
      "items": {
        "type": "object",
        "required": [
          "finish_reason",
          "index",
          "content_filter_results",
          "message"
        ],
        "properties": {
          "finish_reason": { "type": "string", "const": "stop" },
          "index": { "type": "integer", "const": 0 },
          "content_filter_results": { "$ref": "#/definitions/filterResults" },
          "message": {
            "type": "object",
            "required": ["content", "padding", "role"],
            "properties": {
              "content": { "type": "string" },
              "padding": { "type": "string" },
              "role": { "type": "string", "const": "assistant" }
            }
          }
        }
      }
    },
    "id": {
      "description": "A unique identifier for the chat completion, generated from a timestamp.",
      "type": "string",
      "pattern": "^chatcmpl-\\d+$"
    },
    "usage": {
      "description": "Token usage statistics for the completion.",
      "type": "object",
      "required": [
        "completion_tokens",
        "prompt_tokens",
        "total_tokens"
      ],
      "properties": {
        "completion_tokens": { "type": "integer" },
        "completion_tokens_details": { "type": "object" },
        "prompt_tokens": { "type": "integer" },
        "prompt_tokens_details": { "type": "object" },
        "total_tokens": { "type": "integer" }
      }
    },
    "model": { "type": "string" },
    "prompt_filter_results": {
      "type": "array",
      "minItems": 1,
      "maxItems": 1,
      "items": {
        "type": "object",
        "required": ["content_filter_results", "prompt_index"],
        "properties": {
          "content_filter_results": { "$ref": "#/definitions/filterResults" },
          "prompt_index": { "type": "integer", "const": 0 }
        }
      }
    },
    "system_fingerprint": { "type": "string" }
  },
  "definitions": {
    "filterResults": {
      "description": "Standard object for content filtering results.",
      "type": "object",
      "properties": {
        "hate": { "$ref": "#/definitions/severity" },
        "self_harm": { "$ref": "#/definitions/severity" },
        "sexual": { "$ref": "#/definitions/severity" },
        "violence": { "$ref": "#/definitions/severity" }
      }
    },
    "severity": {
      "type": "object",
      "properties": {
        "filtered": { "type": "boolean" },
        "severity": { "type": "string", "enum": ["safe", "low", "medium", "high"] }
      }
    }
  }
}
